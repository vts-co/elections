@{
    ViewBag.Title = "الرئيسية";
}

<div class="container mt-5">

    <div class="row g-4 justify-content-center">

        <!-- زر الناخبين -->
        <div class="col-md-3 col-sm-6">
            <a href="/VoterSearch/Index" class="text-decoration-none">
                <div class="card text-center shadow-lg border-0 quick-card bg-primary text-white">
                    <div class="card-body py-4">
                        <i class="bi bi-people-fill fs-1"></i>
                        <h5 class="mt-3 fw-bold">الناخبين</h5>
                        <p class="small mb-0">إدارة بيانات الناخبين</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- زر اللجان -->
        <div class="col-md-3 col-sm-6">
            <a href="/RptStatistics/Index" class="text-decoration-none">
                <div class="card text-center shadow-lg border-0 quick-card bg-success text-white">
                    <div class="card-body py-4">
                        <i class="bi bi-building fs-1"></i>
                        <h5 class="mt-3 fw-bold">
                            إحصائيات الناخبين
                        </h5>
                        <p class="small mb-0">
                            عرض إحصائيات الناخبين
                        </p>
                    </div>
                </div>
            </a>
        </div>

     
    </div>
</div>

<style>
    body {
        direction: rtl;
        background-color: #f8f9fa;
    }

    .quick-card {
        border-radius: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .quick-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

    h2 {
        color: #333;
    }h5 {
        color: white;
    }
</style>

