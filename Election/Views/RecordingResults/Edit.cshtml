@model Election.Models.CandidatesStatistic
@using Election.Utilities

@{
    ViewBag.Title = "تعديل سجل رصد";
}




@using (Html.BeginForm("Edit", "RecordingResults", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)
    <div class="card">
        <div class="card-header">
            <div class="row justify-content-between">
                <h4 class="col-auto"></h4>
                @Url.BackToList()
            </div>
        </div>
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(m => m.Id)

            <div class="row">


                <div class="form-group mb-3 col-sm-6">
                    @Html.Label("التاريخ ", htmlAttributes: new { @class = "control-label" })
                    <div class="col-12">
                        @Html.TextBoxFor(model => model.Date, "{0:yyyy-MM-dd}", htmlAttributes: new { @class = "form-control", type = "date", required = "required" })

                    </div>
                </div>
                <div class="form-group mb-3 col-sm-6">
                    @Html.Label("المرشح ", htmlAttributes: new { @class = "control-label" })
                    <div class="col-12">
                        @Html.DropDownListFor(m => m.CandidateId, null, "اختر مرشح", new { @class = "form-control", required = "required" })

                    </div>
                </div>
                <div class="form-group mb-3 col-sm-6">
                    @Html.Label("عدد الناخبين ", htmlAttributes: new { @class = "control-label" })
                    <div class="col-12">
                        @Html.TextBoxFor(m => m.NumberOfVoters, new { @class = "form-control", type = "number", min = "0", required = "required" })

                    </div>
                </div>






            </div>
        </div>
        <div class="card-footer">
            <div class="row justify-content-end">

                @Url.SubmitSave()

            </div>
        </div>
    </div>
}
