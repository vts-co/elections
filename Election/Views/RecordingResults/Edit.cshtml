@model Election.Models.CandidatesStatistic
@using Election.Utilities

@{
    ViewBag.Title = "تعديل سجل رصد";
}




@using (Html.BeginForm("Edit", "RecordingResults", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)
    <div class="card">
        <div class="card-header">
            <div class="row justify-content-between">
                <h4 class="col-auto"></h4>
                @Url.BackToList()
            </div>
        </div>
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(m => m.Id)

            <div class="row">

                @Html.AntiForgeryToken()

                <div class="col-md-3">
                    <label>المركز</label>
                    @Html.DropDownList("Center", (SelectList)ViewBag.Centers, "-- اختر المركز --", new { @class = "form-control", id = "center" })
                </div>

                <div class="col-md-3">
                    <label>القرية</label>
                    @Html.DropDownList("Village", (SelectList)ViewBag.Villages, "-- اختر القرية --", new { @class = "form-control", id = "village" })
                </div>

                <div class="col-md-6">
                    <label>المدرسة</label>
                    @Html.DropDownListFor(m => m.School, (SelectList)ViewBag.Schools, "-- اختر المدرسة --", new { @class = "form-control", id = "School" })
                </div>

                <div class="form-group mb-3 col-sm-6">
                    @Html.Label("المرشح ", htmlAttributes: new { @class = "control-label" })
                    <div class="col-12">
                        @Html.DropDownListFor(m => m.CandidateId, null, "اختر مرشح", new { @class = "form-control", required = "required" })

                    </div>
                </div>
                <div class="form-group mb-3 col-sm-6">
                    @Html.Label("عدد الاصوات ", htmlAttributes: new { @class = "control-label" })
                    <div class="col-12">
                        @Html.TextBoxFor(m => m.NumberOfVoters, new { @class = "form-control", type = "number", min = "0", required = "required" })

                    </div>
                </div>






            </div>
        </div>
        <div class="card-footer">
            <div class="row justify-content-end">

                @Url.SubmitSave()

            </div>
        </div>
    </div>
}
@section scripts{
    <script>
$(document).ready(function () {

    // ✅ القيم الجاهزة من السيرفر (اللي اختارها المستخدم قبل كده)
    var selectedCenter = '@ViewBag.SelectedCenter';
    var selectedVillage = '@ViewBag.SelectedVillage';
    var selectedSchool = '@ViewBag.SelectedSchool';

    // 🔹 لما المستخدم يختار مركز
    $('#center').change(function () {
        var center = $(this).val();
        $('#village').empty().append('<option value="">-- كل القرى --</option>');
        $('#School').empty().append('<option value="">-- كل المدارس --</option>');

        if (center) {
            $.getJSON('@Url.Action("GetVillages", "VoterSearch")', { center: center }, function (data) {
                $.each(data, function (i, village) {
                    $('#village').append($('<option>', { value: village, text: village }));
                });

                // لو عندي قرية محفوظة مسبقًا، اختارها
                if (selectedVillage) {
                    $('#village').val(selectedVillage).trigger('change');
                }
            });
        }
    });

    // 🔹 لما المستخدم يختار قرية
    $('#village').change(function () {
        var village = $(this).val();
        $('#School').empty().append('<option value="">-- كل المدارس --</option>');

        if (village) {
            $.getJSON('@Url.Action("GetSchools", "VoterSearch")', { village: village }, function (data) {
                $.each(data, function (i, School) {
                    $('#School').append($('<option>', { value: School, text: School }));
                });

                // لو عندي مدرسة محفوظة مسبقًا، اختارها
                if (selectedSchool) {
                    $('#School').val(selectedSchool);
                }
            });
        }
    });

    // ✅ عند فتح الصفحة أول مرة
    if (selectedCenter) {
        $('#center').val(selectedCenter).trigger('change');
    }
});
    </script>
}
