@model Election.Models.CandidatesStatistic
@using Election.Utilities

@{
    ViewBag.Title = "تعديل سجل رصد";
}




@using (Html.BeginForm("Create", "RecordingResults", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)
    <div class="card">
        <div class="card-header">
            <div class="row justify-content-between">
                <h4 class="col-auto"></h4>
                @Url.BackToList()
            </div>
        </div>
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(m => m.Id)

            <div class="row">

                @Html.AntiForgeryToken()

                <div class="col-md-3">
                    <label>المركز</label>
                    <select id="center" class="form-control">
                        <option value="">-- كل المراكز --</option>
                        @foreach (var c in ViewBag.Centers as List<string>)
                        {
                            <option value="@c">@c</option>
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label>القرية</label>
                    <select id="village" class="form-control">
                        <option value="">-- كل القرى --</option>
                    </select>
                </div>


                <div class="col-md-6">
                    <label>المدرسة</label>
                    <select id="school" class="form-control">
                        <option value="">-- كل المدارس --</option>
                    </select>
                </div>
                <div class="form-group mb-3 col-sm-6">
                    @Html.Label("المرشح ", htmlAttributes: new { @class = "control-label" })
                    <div class="col-12">
                        @Html.DropDownListFor(m => m.CandidateId, (SelectList)ViewBag.CandidateId, "اختر مرشح", new { @class = "form-control", required = "required" })

                    </div>
                </div>
                <div class="form-group mb-3 col-sm-6">
                    @Html.Label("عدد الاصوات ", htmlAttributes: new { @class = "control-label" })
                    <div class="col-12">
                        @Html.TextBoxFor(m => m.NumberOfVoters, new { @class = "form-control", type = "number", min = "0", required = "required" })

                    </div>
                </div>






            </div>
        </div>
        <div class="card-footer">
            <div class="row justify-content-end">

                @Url.SubmitAdd()

            </div>
        </div>
    </div>
}
@section scripts{
    <script>
$(document).ready(function () {


  

    // 🌳 تحديث القوائم عند اختيار المركز
    $('#center').change(function () {
        var center = $(this).val();
        $('#village').empty().append('<option value="">-- كل القرى --</option>');
        $('#school').empty().append('<option value="">-- كل المدارس --</option>');
      
        if (center) {
            $.getJSON('@Url.Action("GetVillages", "VoterSearch")', { center: center }, function (data) {
                $.each(data, function (i, village) {
                    $('#village').append($('<option>', { value: village, text: village }));
                });
            });
        }
    });

    // ✅ إظهار عمود العزبة فقط عند القرية المطلوبة
    $('#village').change(function () {
    var village = $(this).val();
    $('#school').empty().append('<option value="">-- كل المدارس --</option>');

    
        
    // تحميل المدارس والعزب
    if (village) {
        $.getJSON('@Url.Action("GetSchools", "VoterSearch")', { village: village }, function (data) {
            $.each(data, function (i, school) {
                $('#school').append($('<option>', { value: school, text: school }));
            });
        });

       
    }

    // إعادة تحميل الجدول بعد التغيير
    //table.ajax.reload();
});

 

});
        // ✅ زر تسجيل الحضور داخل المودال (Popup)


    </script>


}