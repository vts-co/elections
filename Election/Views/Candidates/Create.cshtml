@model Election.Models.Candidate
@using Election.Utilities

@{
    ViewBag.Title = "إضافة مستخدم جديد";
}




@using (Html.BeginForm("Create", "Candidates", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)
    <div class="card">
        <div class="card-header">
            <div class="row justify-content-between">
                <h4 class="col-auto"></h4>
                @Url.BackToList()
            </div>
        </div>
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(m => m.Id)

            <div class="row">

                <div class="form-group mb-3 col-sm-12">
                    @Html.Label("الاسم ", htmlAttributes: new { @class = "control-label" })
                    <div class="col-12">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required = "required" })

                    </div>
                </div>
          





            </div>
        </div>
        <div class="card-footer">
            <div class="row justify-content-end">

                @Url.SubmitAdd()

            </div>
        </div>
    </div>
}
